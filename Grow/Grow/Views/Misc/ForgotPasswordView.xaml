<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grow.Views.ForgotPasswordView">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="0,20,0,0" />
        </OnPlatform>
    </ContentPage.Padding>

    <ScrollView>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="300" />
                    <RowDefinition Height="230" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackLayout Background="{StaticResource BackgroundGradient}"/>

                <Label Grid.Row="0" Text="Forgot your password?" TextColor="{StaticResource GrowGreenText}" HorizontalOptions="Center" VerticalOptions="Center" FontSize="30" />
            </Grid>
        </StackLayout>
    </ScrollView>

</ContentPage>